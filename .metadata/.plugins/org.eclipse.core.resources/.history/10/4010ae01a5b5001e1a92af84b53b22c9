<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.project.repository.BoardDAO">
	<insert id="insert">
		insert into board(title, writer, content)
		values(#{title},#{writer},#{content})
	</insert>
	<select id="getList"
		resultType="com.ezen.project.domain.BoardVO">
		select * from board
		<include refid="search"/>
		order by bno desc limit
		#{pageStart},#{qty}
	</select>
	<select id="getTotalCount" resultType="int">
		select count(bno) from
		board
	</select>
	<select id="getBvoL"
		resultType="com.ezen.project.domain.BoardDTO">
		select * from board where bno =#{bno}
	</select>
	<delete id="delete">
		delete from board where bno =#{bno}
	</delete>
	<update id="update">
		update board set title = #{title},
		content=#{content},
		mod_at=now() where bno =#{bno}
	</update>
	<update id="readCount">
		update board set read_count = read_count+1 where bno =#{bno};
	</update>
	<update id="gaechu">
		update board set gaechu = gaechu+1,read_count =
		read_count-1 where bno =#{bno};
	</update>
	<update id="bichu">
		update board set gaechu = gaechu-1,read_count =
		read_count-1 where bno =#{bno};
	</update>
	<sql id="search">
		<if test="type != null">
			<trim prefix="where(" suffix=")" prefixOverrides="or">
				<foreach collection="typeToArray" item="type">
					<trim prefix="or">
						<choose>
							<when test="type == 't'.toString()">
								title like concat('%',#{keyword},'%')</when>
							<when test="type == 'w'.toString()">
								writer like concat('%',#{keyword},'%')</when>
							<when test="type == 'c'.toString()">
								content like concat('%',#{keyword},'%')</when>
						</choose>
					</trim>
				</foreach>
			</trim>
		</if>
	</sql>
</mapper>